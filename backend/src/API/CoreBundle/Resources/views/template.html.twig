<!DOCTYPE html>
<head>
	<title>{% block title %}GRETIA :: Apps{% endblock title %}</title>
	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
	<link rel="shortcut icon" type="image/x-icon" href="{{ asset('/bundles/visuconsultation/carto/images/icones/favicon.ico') }}" />

	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
	<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
	
	{% block stylesheets %}
		<style>
			.card .disabled {
				position: absolute;
		    top: 0;
		    width: 100%;
		    height: 100%;
		    background-color: #ffffffde;
		    cursor: not-allowed;
			}

			.nav-bar .card-panel {
				padding: 14px;
				position: relative;
			}

			.nav-bar a {
		    color: #555;
		    font-size: 17px;
		    font-weight: 500;
			}

			.nav-bar a > i {
		    vertical-align: -4px;
			}

			.nav-bar a:visited {
				
			}

			.nav-bar .card-panel .fixed-action-btn{
				position: absolute;
		    right: 13px;
		    bottom: 7px;
			}
    

		</style>
	{% endblock stylesheets %}

</head>

<body>
	<div class="container">

		{% if app.session.flashbag.has('information') %}
		<div class="row">
			<div class="col s8 offset-s2">
				<div class="card-panel teal lighten-2">
					{% for flash_message in app.session.flashbag.get('information') %}

              <div>{{ flash_message|raw }}</div>

          {% endfor %}
				</div>
			</div>
		</div>
		{% endif %}

		{% block header %}{% endblock header %}

		<div class="row nav-bar">
			<div class="col s12">
				<div class="card-panel light-green lighten-4">
					<div class="left-align">
					{% block chemin %}<a href="{{ path('app_index') }}" title="Accueil"><i class="material-icons">home</i></a>{% endblock chemin %}
					</div>
					<div class="fixed-action-btn">
					  <a class="btn-floating teal lighten-2">
					    <i class="large material-icons">account_circle</i>
					  </a>
					  <ul>
					    <li><a class="btn-floating btn-small grey darken-2" title="Administration des droits"><i class="material-icons">build</i></a></li>
					  </ul>
					</div>
				</div>
			</div>
		</div>

		{% block content %}{% endblock content %}

  </div>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

	<script type="text/javascript">
	  $(function(){
	  	$('.fixed-action-btn').floatingActionButton({direction: 'left', hoverEnabled: false});
	  });
	</script>

	{% block javascripts %}{% endblock javascripts %}
</body>
</html>