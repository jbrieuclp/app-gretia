{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "downlevelIteration": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "@shared/*" : ["src/app/shared/*"],
      "@carto/*" : ["src/app/modules/carto/*"],
      "@import/*" : ["src/app/modules/import/*"],
      "@projet/*" : ["src/app/modules/projet/*"],
      "@taxref/*" : ["src/app/modules/magic-taxref/*"],
      "@synology/*" : ["src/app/modules/synology/*"]
    }
  }
}
